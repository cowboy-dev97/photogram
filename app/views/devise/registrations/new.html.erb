<div class="mx-auto max-w-md bg-white mt-10 flex flex-col justify-center items-center p-6 shadow-2xl rounded-lg">
  <h2 class="text-2xl font-bold text-center mb-4">Sign up</h2>
  <%= link_to "Go back", root_path, class:"text-blue-500 hover:underline decoration-2 underline-offset-2 mb-4"%>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "w-full" }) do |f| %>
    <div class="flex flex-col gap-4 w-full">
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <div class="field">
        <%= f.label :user_name, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :user_name, autocomplete: "username", required: true, class: "w-full p-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <div class="field">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full p-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full p-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <div class="my-6 flex gap-4 items-center justify-center">
        <%= f.submit "Sign up", class:"py-2 px-4 rounded-lg bg-blue-500 text-white hover:scale-105 transition-transform cursor-pointer" %>
        <%= link_to "I am already registered", new_user_session_path, class:"py-2 px-4 rounded-lg bg-gray-500 text-white hover:scale-105 transition-transform cursor-pointer" %>
      </div>
    </div>
  <% end %>
</div>
