<div class="mx-auto max-w-2xl bg-white mt-10 flex flex-col justify-between items-center p4 shadow-2xl">
  
  <h2 class="text-2xl font-bold text-center">Sign up</h2>
  
  <%= link_to "Go back", root_path, class:"cursor-pointer text-blue-500 hover:underline decoration-2 underline-offset-2"%>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="flex flex-col items-center2">
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class:"w-full" %>
      </div>
      <div class="field">
        <%= f.label :user_name %><br />
        <%= f.text_field :user_name, autofocus: true, autocomplete: "username", required: true, class:"w-full" %>
      </div>
      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"w-full" %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"w-full" %>
      </div>
      <div class="my-6 flex gap-4 items-center justify-center ">
        <%= f.submit "Sign up", class:"py-2 px-4 rounded-lg bg-blue-500 text-white hover:scale-105 cursor-pointer" %>
        <%= link_to "I am already registered", new_user_session_path , class:"py-2 px-4 rounded-lg bg-gray-500 text-white hover:scale-105 cursor-pointer" %>
      </div>
      
    <% end %>
  </div>
</div>