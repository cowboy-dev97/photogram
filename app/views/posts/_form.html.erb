  <%= form_with model: @post do |f| %>
    <div class="flex flex-col w-full">
      <%= f.label :image, "Add photo", class:"label" %>
      <%= f.file_field :image, class:"block my-2 border-1 border-gray-300 cursor-pointer rounded-full px-2 py-1 bg-blue-50 hover:bg-blue-300" %>
    </div>
    <div class="flex flex-col w-full">
      <%= f.label :caption, "Caption", class:"label" %>
      <%= f.text_field :caption, class:"border-1 border-blue-500" %>
    </div>
    <div class="text-center">
      <%= f.submit "Save Post", class:" my-2 bg-green-500 text-white py-2 px-12 rounded-full hover:scale-105 cursor-pointer" %>
    </div>
  <% end %>