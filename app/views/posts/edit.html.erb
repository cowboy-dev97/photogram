<div class="w-5xl mx-auto bg-white mt-30 p-4">
  <%= form_with model: @post, class:"flex flex-col items-center justify-center gap-12" do |f| %>
    <div class="flex flex-col w-full justify-center items-center">
      <%= image_tag @post.image, class:"h-[500px] w-[500px] object-cover rounded-lg" %>
      <%= f.file_field :image, class:"block my-2 border-1 border-gray-300 cursor-pointer rounded-full px-2 py-1 bg-blue-50 hover:bg-blue-300" %>
    </div>
    <div class="flex flex-col w-full">
      <%= f.label :caption, "Caption", class:"label" %>
      <%= f.text_field :caption, class:"border-1 border-blue-500" %>
    </div>
    <div>
      <%= f.submit "Post", class:"mt-4 bg-green-500 text-white py-2 px-12 rounded-full hover:scale-105 cursor-pointer" %>
    </div>
  <% end %>
</div>